{
  "name": "tgs",
  "version": "1.0.0",
  "buildVersion": "beta-2.0",
  "description": "Touch Grass Simulator",
  "main": "src/js/index.js",
  "scripts": {
    "start": "electron . --disable-software-rasterizer",
    "build": "electron-builder",
    "pack": "electron-builder build",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bosstop-Studios/TGS-code.git"
  },
  "keywords": [
    "TGS",
    "Grass"
  ],
  "author": "Sir_Blob <sirblob0@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bosstop-Studios/TGS/issues"
  },
  "homepage": "https://github.com/Bosstop-Studios/TGS#readme",
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "download": "^8.0.0",
    "find-process": "^1.4.7",
    "moment": "^2.29.1",
    "ms": "^2.1.3",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "fs": "^0.0.1-security"
  },
  "build": {
    "appId": "ml.bosstop.tgs",
    "forceCodeSigning": false,
    "productName": "TGS",
    "files": [
      "**/*",
      "!unused/",
      "!addon/",
      "!log.txt",
      "!storage.json",
      "!test.json"
    ],
    "win": {
      "target": "nsis",
      "asar": "true"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "license": "./eula.txt",
      "deleteAppDataOnUninstall": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TGS",
      "oneClick": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    }
  }
}
